{
  "name": "hbcore",
  "version": "1.0.0",
  "scripts": {
    "tgbot:start": "bun run --bun --filter='@hbcore/tgbot' start",
    "tgapp:dev": "bun run --bun --filter='@hbcore/tgapp' dev",
    "web:build": "bun run --bun --filter='@hbcore/web' build",
    "web:dev": "bun run --bun --filter='@hbcore/web' dev",
    "api:build": "bun run --bun --filter='@hbcore/api' build",
    "api:dev": "bun run --bun --filter='@hbcore/api' dev",
    "api:start": "bun run --bun --filter='@hbcore/api' start",
    "db:migrate": "bun run --bun --filter='@hbcore/db' migration:run",
    "db:migrate:generate": "bun run --bun --filter='@hbcore/db' migration:generate",
    "db:migrate:revert": "bun run --bun --filter='@hbcore/db' migration:revert",
    "format": "bun run --bun --filter='*' format",
    "format:check": "bun run --bun --filter='*' format:check",
    "lint": "bun run --bun --filter='*' lint",
    "lint:fix": "bun run --bun --filter='*' lint:fix",
    "check": "bun run --bun --filter='*' check",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish",
    "release:dry-run": "changeset publish --dry-run"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@changesets/cli": "^2.29.8",
    "@types/bun": "1.3.1"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.51.1"
  }
}
